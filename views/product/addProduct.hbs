<section class="add-product center">
  <div class="add-card">
    <div class="heading center flex-column">
      <i class="fas fa-comment-alt-edit"></i>
      <h1 class="gradiant-bg">درج اطلاعات محصول</h1>
    </div>
    <div class="add-body">
      <form action="/products/add" method="POST" enctype="multipart/form-data">
        <div class="row col-2 rtl">
          <div class="form-control">
            <input name="modelId" type="text" placeholder="شناسه محصول" />
          </div>
          <div class="form-control">
            <input name="modelName" type="text" placeholder="مدل" />
          </div>
          <div class="form-control">
            <input name="inventory" type="text" placeholder="موجودی" />
          </div>
          <div class="form-control">
            <input name="price" type="number" placeholder="قیمت" />
          </div>
          <div class="form-control">
            <input
              name="requiredSpace"
              type="text"
              placeholder="فضای مورد نیاز"
            />
          </div>
          <div class="form-control">
            <input name="vacum" type="text" placeholder="وکیوم" />
          </div>
          <div class="form-control">
            <input
              name="tankVolume"
              type="text"
              placeholder="حجم مخزن (لیتر)"
            />
          </div>
          <div class="form-control">
            <input name="internalTank" type="text" placeholder="مخزن داخلی" />
          </div>
          <div class="form-control">
            <input name="externalTank" type="text" placeholder="مخزن خارجی" />
          </div>
          <div class="form-control">
            <input name="insulationLayer" type="text" placeholder="لایه عایق" />
          </div>

          <div class="form-control">
            <input name="vacumTube" type="text" placeholder="وکیوم تیوب" />
          </div>
          <div class="form-control">
            <input name="heatPipe" type="text" placeholder="هیت پایپ" />
          </div>

          <div class="upload-photo form-control">
            <label for="pics">آپلود تصاویر</label>
            <input
              type="file"
              multiple
              accept="image/*"
              max="4"
              name="pics"
              id="pics"
            />
          </div>
          <div class="form-control grid-span-2">
            <textarea
              name="desc"
              id=""
              cols="30"
              rows="10"
              placeholder="توضیحات"
            ></textarea>
          </div>
        </div>

        <div class="center pt-25">
          <button class="btn btn-big btn-gradiant">ثبت</button>
        </div>
      </form>
    </div>
